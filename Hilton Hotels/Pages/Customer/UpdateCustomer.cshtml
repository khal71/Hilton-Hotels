@page
@model Hilton_Hotels.Pages.Customer.UpdateCustomerModel
@{
}
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UpdateCustomer.Name"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UpdateCustomer.Name" class="form-control" readonly />
            </div>
            <span class="text-danger" asp-validation-for="UpdateCustomer.Name"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UpdateCustomer.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UpdateCustomer.Username" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="UpdateCustomer.Username"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UpdateCustomer.Password"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UpdateCustomer.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="UpdateCustomer.Password"></span>
        </div>
       
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="UpdateCustomer" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>