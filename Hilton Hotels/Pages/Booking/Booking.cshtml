            </div>
            <div class="col-5">
                <input type="text" asp-for="Booking.CustomerUser" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Booking.CustomerUser"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Booking.RoomeId"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Booking.RoomeId" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Booking.RoomeId"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="RegisterBooking" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>