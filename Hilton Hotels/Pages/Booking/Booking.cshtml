        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Booking.CheackIn"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Booking.CheackIn" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Booking.CheackIn"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Booking.CheackOut"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Booking.CheackOut" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Booking.CheackOut"></span>
